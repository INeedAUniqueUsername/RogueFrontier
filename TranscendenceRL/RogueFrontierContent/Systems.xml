<Module>
	<SystemType	codename=	"system_orion"
				name=		"Orion"
		>
		<System>
			<Star	 radius="50"/>

			<Orbital radius="400"
					 angle="random">

				<Planet radius="20"
						showOrbit="true"
							/>

				<Orbital angle="incrementing"
						 increment="45">

					<Group radius="22">
						<Planet radius="3"/>
					</Group>

					<Group radius="45">
						<Planet radius="10"/>
					</Group>

					<!-- Uther
							The main Commonwealth station is here. -->

					<Group radius="80">
						<Planet radius="8"/>

						<!-- The main stations are all in a group -->

						<Sibling angleInc="180">
							<Station	codename="station_constellation_astra"/>
						</Sibling>

						<!-- The Sisters of Domina is opposite -->

						<Sibling radiusInc="12">
							<Station	codename="station_daughters_outpost"/>
							<Orbital	radius="5"
										angle="random"
										>
								<Marker		name="Start"/>
							</Orbital>
						</Sibling>
					</Group>
				</Orbital>
			</Orbital>
		</System>
	</SystemType>
</Module>