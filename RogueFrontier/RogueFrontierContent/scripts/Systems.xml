<Module>
	<SystemType	codename=	"system_orion"
				name=		"Orion"
		>
		<SystemGroup>
			<Star	 radius="75"/>

			
			<Orbital radius="150" angle="random">
				<Group>
					<Stargate gateId="Next"/>
					<!--
					<Sibling angleInc="135" radiusInc="100">
						<Stargate gateId="Prev"/>
					</Sibling>
					-->
				</Group>
			</Orbital>

			<Orbital count="5"
					 radius="300"
					 angle="random"
					 increment="30-60"
					 >

				<Station	codename="station_orion_warlords_camp"/>
			</Orbital>
			<Orbital radius="400"
					 angle="random">

				<!--Giant planet-->
				<Planet radius="20"
						showOrbit="true"
							/>
				<!--Starting area-->
				<Orbital angle="random"
						 increment="80">

					<!--tiny moon with warlord camp-->
					<Group radius="60">
					
						<Planet radius="5"/>
						<Orbital count="2" angle="random" increment="90-150" radius="10">
							<Station	codename="station_orion_warlords_camp"/>
						</Orbital>
						<Orbital angleInc="-90" radius="50">
							<Station	codename="station_orion_warlords_stronghold"/>
						</Orbital>
						
					</Group>

					<!--small moon with ring of stations-->
					<Group radius="80">
						<Planet radius="10"/>
						<Orbital radius="30" angle="random" increment="20" count="5">
							<Group>
								<!--Astra + Village-->
								<Station	codename="station_constellation_astra"/>
								<Sibling	radiusInc="20">
									<Station codename="station_constellation_habitat"/>
								</Sibling>
								
								<!--Accompanying special stations-->
								<At index="1">
									<Sibling	radiusInc="-15">
										<Station codename="station_armor_shop"/>
									</Sibling>
								</At>
								<At index="2">
									<Sibling radiusInc="-15">
										<Station codename="station_amethyst_store"/>
									</Sibling>
								</At>
								<At index="3">
									<Sibling	radiusInc="-15">
										<Station codename="station_arms_dealer"/>
									</Sibling>
								</At>
							</Group>
						</Orbital>
					</Group>

					<Group radius="100">
						<!--Far-away small Moon-->
						<Planet radius="8"/>

						<Orbital angle="random" radius="20">
							<Group>
								<Station	codename="station_daughters_outpost"/>
								<Orbital	radius="5"
											angle="random"
											>
									<Marker		name="Start"/>
								</Orbital>
							</Group>
						</Orbital>
					</Group>
				</Orbital>
			</Orbital>
			<Orbital radius="240" angle="random">
				<Group>
					<Planet radius="15"/>
					<Orbital radius="15" angle="random" increment="45-90">
						<Station codename="station_arms_dealer"/>
						<Station codename="station_arms_dealer"/>
					</Orbital>
				</Group>
			</Orbital>
		</SystemGroup>
	</SystemType>

